{
  "name": "@almothafar/angular-signature-pad",
  "version": "7.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng build angular-signature-pad --watch",
    "start:demo": "ng serve demo",
    "build": "ng build",
    "build:prod": "rimraf dist && ng build angular-signature-pad --configuration production && npm run copyExtra",
    "build:docs": "rimraf demo && ng build demo --configuration production",
    "pack": "cd dist/ && npm pack",
    "publish": "cd dist/ && npm publish --access=public",
    "test": "ng test",
    "lint": "ng lint",
    "copyExtra": "node -e \"require('fs').copyFileSync('README.md', './dist/README.md');require('fs').copyFileSync('CHANGELOG.md', './dist/CHANGELOG.md');\""
  },
  "dependencies": {
    "@angular/animations": "^19.2.16",
    "@angular/common": "^19.2.16",
    "@angular/compiler": "^19.2.16",
    "@angular/core": "^19.2.16",
    "@angular/forms": "^19.2.16",
    "@angular/platform-browser": "^19.2.16",
    "@angular/platform-browser-dynamic": "^19.2.16",
    "@angular/router": "19.2.16",
    "rxjs": "~7.8.2",
    "signature_pad": "^5.1.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular-eslint/builder": "^19.8.1",
    "@angular-eslint/eslint-plugin": "^19.8.1",
    "@angular-eslint/eslint-plugin-template": "^19.8.1",
    "@angular-eslint/schematics": "^19.8.1",
    "@angular-eslint/template-parser": "^19.8.1",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.16",
    "@types/jasmine": "~5.1.13",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "jasmine-core": "~5.12.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "ng-packagr": "^19.2.2",
    "rimraf": "~6.1.2",
    "typescript": "~5.8.3"
  }
}
