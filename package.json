{
  "name": "@almothafar/angular-signature-pad",
  "version": "6.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "rimraf dist && ng build angular-signature-pad --configuration production && npm run copyREADME",
