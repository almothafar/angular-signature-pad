{
  "name": "@almothafar/angular-signature-pad",
  "version": "6.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng build angular-signature-pad --watch",
    "start:demo": "ng serve demo",
    "build": "ng build",
    "build:prod": "rimraf dist && ng build angular-signature-pad --configuration production && npm run copyExtra",
    "build:docs": "rimraf demo && ng build demo --configuration production",
    "pack": "cd dist/ && npm pack",
    "publish": "cd dist/ && npm publish --access=public",
    "test": "ng test",
    "lint": "ng lint",
    "copyExtra": "node -e \"require('fs').copyFileSync('README.md', './dist/README.md');require('fs').copyFileSync('CHANGELOG.md', './dist/CHANGELOG.md');\""
  },
  "dependencies": {
    "@angular/animations": "v18-lts",
    "@angular/common": "v18-lts",
    "@angular/compiler": "v18-lts",
    "@angular/core": "v18-lts",
    "@angular/forms": "v18-lts",
    "@angular/platform-browser": "v18-lts",
    "@angular/platform-browser-dynamic": "v18-lts",
    "@angular/router": "v18-lts",
    "rxjs": "~7.8.2",
    "signature_pad": "^5.1.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "v18-lts",
    "@angular-eslint/builder": "^18.4.3",
    "@angular-eslint/eslint-plugin": "^18.4.3",
    "@angular-eslint/eslint-plugin-template": "^18.4.3",
    "@angular-eslint/schematics": "^18.4.3",
    "@angular-eslint/template-parser": "^18.4.3",
    "@angular/cli": "v18-lts",
    "@angular/compiler-cli": "v18-lts",
    "@types/jasmine": "~5.1.13",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "jasmine-core": "~5.12.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "ng-packagr": "^18.2.1",
    "rimraf": "~6.1.2",
    "typescript": "~5.5.4"
  }
}
